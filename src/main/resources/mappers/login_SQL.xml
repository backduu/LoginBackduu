<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.helloauthlogin.DAO.UserDao">
    <resultMap id="UserWithRoles" type="com.example.helloauthlogin.DTO.UserRegisterDTO">
        <id     property="seq"      column="SEQ"/>
        <result property="id"       column="ID"/>
        <result property="password" column="PASSWORD"/>
        <result property="name"     column="NAME"/>
        <result property="age"      column="AGE"/>
        <result property="position" column="POSITION"/>
        <result property="dept"  column="DEPT"/>
        <result property="status"  column="STATUS"/>

        <collection property="authority" ofType="string" column="AUTHORITY"/>
    </resultMap>
    <select id="findByUserId" resultMap="UserWithRoles">
        SELECT   T1.ID,
                 T1.NAME,
                 T1.AGE,
                 T1."POSITION",
                 T1.PASSWORD,
                 T1.DEPT_SEQ
        FROM   DT_USER_MASTER T1
                   LEFT JOIN   DT_AUTHORITIES ST1
                               ON   T1.ID = ST1.user_id
        WHERE   T1.ID = #{userId}
    </select>

    <insert id="saveUser" parameterType="com.example.helloauthlogin.DTO.UserRegisterDTO">
        INSERT INTO DT_USER_MASTER (
                SEQ,
                NAME,
                AGE,
                POSITION,
                DEPT_SEQ,
                ID,
                PASSWORD
        ) VALUES
        (
                SEQ.NEXTVAL,
                #{name},
                #{age},
                #{position},
                #{dept},
                #{id},
                #{password}
        )
    </insert>

    <insert id="saveAuthorities" parameterType="com.example.helloauthlogin.DTO.UserRegisterDTO">
        INSERT ALL
        <foreach collection="authority" item="auth">
            INTO DT_AUTHORITIES (SEQ, USER_ID, AUTHORITY)
            VALUES (SEQ.NEXTVAL, #{id}, #{auth})
        </foreach>
        SELECT * FROM DUAL
    </insert>
</mapper>